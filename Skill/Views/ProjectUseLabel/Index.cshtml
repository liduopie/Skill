@model IEnumerable<Skill.Models.ProjectUseLabel>

@{
    ViewData["Title"] = "Index";
}

<h2>项目使用标签表</h2>

<p>
    @if (ViewData["id"] == null)
    {
        <a asp-action="Create">添加</a>
    }
    else
    {
        <a asp-area="" asp-controller="Project" asp-action="Details" asp-route-id="@ViewData["id"]">返回</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Label.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Name)
                </td>
                <td>
                    @if (ViewData["id"] == null)
                {
                        @Html.ActionLink("修改 |", "Edit", new { id = item.LabelID, ids = item.ProjectID });
                        //@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink(" 删除", "Delete", new { id = item.LabelID, ids = item.ProjectID })
                    }


                </td>
            </tr>
        }
    </tbody>
</table>