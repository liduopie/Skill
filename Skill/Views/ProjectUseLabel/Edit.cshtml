@model Skill.Models.ProjectUseLabel

@{
    ViewData["Title"] = "Edit";
}

<h2>修改</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>项目使用标签表</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProjectID" />
        <input type="hidden" asp-for="LabelID" />

        <div class="form-group">
            <label asp-for="ProjectID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LabelID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="LabelID" class="form-control" asp-items="ViewBag.LabelID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
