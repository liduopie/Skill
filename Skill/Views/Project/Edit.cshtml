@model Skill.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h2>修改</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>项目</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Synopsis" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<input asp-for="Synopsis" class="form-control" />*@
                <textarea asp-for="Synopsis" class="form-control" style="width:300px;height:80px;"></textarea>
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BeginTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BeginTime" class="form-control" />
                <span asp-validation-for="BeginTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FinishTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FinishTime" class="form-control" />
                <span asp-validation-for="FinishTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="State" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
