@model Skill.Models.PersonUseLabel

@{
    ViewData["Title"] = "Delete";
}

<h2>删除</h2>

<h3>您确认删除这项吗</h3>
<div>
    <h4>人员使用标签</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ID" />      
        <dt>
            人员名称
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt>
            标签名称
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lable.Name)
        </dd>
        <dt>
            使用时间
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserTime)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="确认删除" class="btn btn-default" /> |
            <a asp-action="Index">返回列表</a>
        </div>
    </form>
</div>