@model Skill.Models.ProjectPartakePerson

@{
    ViewData["Title"] = "Create";
}

<h2>添加</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>项目分派人员表</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProjectID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PersonID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="BeginTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BeginTime" class="form-control" />
                <span asp-validation-for="BeginTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FinishTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FinishTime" class="form-control" />
                <span asp-validation-for="FinishTime" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="添加" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
