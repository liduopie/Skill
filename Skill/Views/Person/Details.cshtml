@{ 
    List<Label> a = (List<Label>)ViewData["LL"];
}
<div>
    掌握标签总数：@Html.DisplayFor(model => model.LabelCount)
    <table class="table">
        <thead>
            <tr>
                <th>
                    掌握的标签
                </th>
                <th>
                    使用次数
                </th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in a)
             {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LabelUseCount</td>
                    <td>@Html.ActionLink("使用情况详细", "Index", "PersonUseLabel", new { PersonId=Model.Id,LabelId=item.Id})</td>
                </tr> 
             }
        </tbody>
    </table>
